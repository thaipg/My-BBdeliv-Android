<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout_item_shipment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_left_blue"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:fontFamily="montserrat"
                    android:paddingLeft="10.5dp"
                    android:paddingRight="2dp"
                    android:text="Mã YC :"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText,RtlHardcoded" />

                <TextView
                    android:id="@+id/tvRequestCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:fontFamily="@font/montserrat"
                    android:paddingLeft="10dp"
                    android:textAllCaps="true"
                    android:textColor="@color/colorSidenavbar"
                    tools:ignore="InefficientWeight,NestedWeights,RtlHardcoded,RtlSymmetry" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="horizontal"
                android:paddingTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat"
                    android:paddingLeft="9.4dp"
                    android:paddingRight="1dp"
                    android:text="KC :"
                    android:textColor="@color/colorBlack"
                    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorBlack"
                    tools:ignore="InefficientWeight,NestedWeights,RtlHardcoded,RtlSymmetry" />

                <CheckBox
                    android:id="@+id/cbSelected"
                    style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:clickable="false"
                    android:enabled="true" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblCustomerCode"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat"
                    android:paddingLeft="9.4dp"
                    android:paddingRight="1dp"
                    android:text="Ng/Nhận :"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText,RtlHardcoded" />

                <TextView
                    android:id="@+id/tvCustomerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorBlack"
                    tools:ignore="InefficientWeight,NestedWeights,RtlHardcoded,RtlSymmetry" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="9.4dp"
                    android:paddingRight="1dp"
                    android:text="Ng/Gửi :"
                    android:textColor="@color/colorBlack"
                    tools:ignore="HardcodedText,RtlHardcoded" />

                <TextView
                    android:id="@+id/tvSenderName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorBlack"
                    tools:ignore="InefficientWeight,NestedWeights,RtlHardcoded,RtlSymmetry" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="5.4dp"
                    android:paddingRight="1dp"
                    android:text="SĐT :"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorBlack"
                    tools:ignore="HardcodedText,RtlHardcoded" />

                <TextView
                    android:id="@+id/tvPhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorBlack"
                    tools:ignore="InefficientWeight,NestedWeights,RtlHardcoded,RtlSymmetry" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="9.4dp"
                    android:paddingRight="1dp"
                    android:text="Số kiện :"
                    android:textColor="@color/colorBlack"
                    tools:ignore="HardcodedText,RtlHardcoded" />

                <TextView
                    android:id="@+id/tvNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorBlack"
                    tools:ignore="InefficientWeight,NestedWeights,RtlHardcoded,RtlSymmetry" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:paddingLeft="7.8dp"
                android:paddingRight="1dp"
                android:text="Địa chỉ :"
                android:textAlignment="textEnd"
                android:textColor="@color/colorBlack"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:textColor="@color/colorBlack"
                tools:ignore="InefficientWeight,NestedWeights,RtlHardcoded,RtlSymmetry" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_bottom_white"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Phải thu :"
                android:textAlignment="textEnd"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/tvMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="8dp"
                android:text="0 VNĐ"
                android:textAlignment="textEnd"
                android:textColor="@color/colorBlack" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNote"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_weight=".9"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:text="Nội dung hàng hóa"
                android:textColor="@color/colorBlack" />

            <ImageButton
                android:id="@+id/btNote"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="15dp"
                android:layout_weight=".1"
                android:background="@drawable/button_no_background"
                android:src="@drawable/icons8_about_16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGray"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/ic_action_update_16"
                    android:state_enabled="false"
                    tools:ignore="ContentDescription,VectorDrawableCompat" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat"
                    android:paddingTop="8dp"
                    android:text="Chờ lấy hàng"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp"
                    tools:ignore="HardcodedText,SmallSp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                tools:ignore="RtlHardcoded,RtlSymmetry,UseCompoundDrawables">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/ic_time"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tvTimePickup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat"
                    android:inputType="time"
                    android:paddingLeft="5dp"
                    android:paddingTop="8dp"
                    android:text="00:00"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp"
                    tools:ignore="HardcodedText,SmallSp,TextViewEdits" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>